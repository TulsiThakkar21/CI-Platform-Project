@using CIPlatform.Entities.Models
@model LoginModel



@{
    ViewData["Title"] = "CI Login";
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>

    <!-- css -->
    <link rel="stylesheet" href="~/css/loginstyle.css">

    <!-- Bootstrap links -->

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/css/bootstrap.min.css"
        integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">

    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js"
        integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n"
        crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"
        integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo"
        crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/js/bootstrap.min.js"
        integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6"
        crossorigin="anonymous"></script>





</head>

<body onload="document.FormName.reset();">


    <!-- Section: Split screen -->
    <section class="">

        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-8 ">


                    <!-- Carousel -->

                    <div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="true">
                        <div class="carousel-indicators">
                            <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0"
                                class="active" aria-current="true" aria-label="Slide 1"></button>
                            <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1"
                                aria-label="Slide 2"></button>
                            <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2"
                                aria-label="Slide 3"></button>
                        </div>
                        <div class="carousel-inner">

                            <div class="carousel-item active">
                                <img src="~/NewFolder/carousel-active-login.png" class="d-block w-100 carousel-img" alt="...">

                                <div class="carousel-caption d-md-block">
                                    <h1>Sed ut perspiciatis unde omnis <br>
                                        iste natus voluptatem.
                                    </h1>

                                    <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit.
                                        Integer volutpat ante nec mauris dictum consequat. Duis lacus sapien,
                                        scelerisque egestas consectetur at, malesuada sit amet tortor.
                                        Aliquam erat volutpat. Morbi in purus id lorem ornare suscipit vel
                                        et nunc. Proin tincidunt justo sem, sit amet pretium dui semper vitae.
                                        Curabitur mi urna, congue non eros a, posuere porttitor lectus.
                                        Proin tincidunt in ipsum ac lacinia. </p>
                                </div>
                            </div>

                            <div class="carousel-item">
                                <img src="~/NewFolder/carousel-active-login.png" class="d-block w-100 carousel-img" alt="...">
                            </div>

                            <div class="carousel-item">
                                <img src="~/NewFolder/carousel-active-login.png" class="d-block w-100 carousel-img" alt="...">
                            </div>

                        </div>

                        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators"
                            data-bs-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="visually-hidden"></span>
                        </button>

                        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators"
                            data-bs-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="visually-hidden"></span>
                        </button>
                    </div>


                </div>

                <div class="col-lg-4">

                    @using (Html.BeginForm("Index","Home", FormMethod.Post)){

                            if(ViewBag.LoginStatus != null)
                            {
                                if(ViewBag.LoginStatus == 0)
                                {
                                     <div class="alert alert-danger">Invalid Login Credentials</div>
                                  
                                
                            }
                        }



                        <form class="mailpass" method="post">

                            <div class="mail">

                                <div>
                                    <label asp-for="LoginId" id="regemail" class="form-label-email">Email Address</label>
                                    <input asp-for="LoginId" type="email" placeholder="Enter your email" class="form-control">
                                    <span asp-validation-for="LoginId" class="text-danger" style="font-size:12px;"></span>
                                </div>
                                <br>
                                <label asp-for="Password" class="form-label">Password</label>
                                <input asp-for="Password" type="password" placeholder="Enter your password" class="form-control">
                                <span asp-validation-for="Password" class="text-danger" style="font-size:12px;"></span>

                               

                            </div>
                            <br>
                            <button type="submit" class="btn-login">Login</button>
                            <br>

                            <br>
                            <div class="lost">

                                <a asp-controller="Home" asp-action="LostPass" class="lbl-losspass">Lost your password?</a> <br>
                                <span class="lbl-acc">
                                    Don't have an account?
                                    <a asp-controller="Home" asp-action="Registration">Create an account</a>
                                </span><br>

                            </div>

                        </form>


                   
                    }
                </div>

            </div>
        </div>

    </section>
    <!-- Section: Split screen -->



</body>

</html>
