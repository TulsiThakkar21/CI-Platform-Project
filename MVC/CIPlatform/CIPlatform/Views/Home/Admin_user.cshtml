@{
    Layout = null;
}
@model CIPlatform.Entities.Models.AdminUserVM
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>User</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Noto+Sans:wght@300&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet">
    
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.2/css/all.min.css">

    @*<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>*@
    
    <script src="https://code.jquery.com/jquery-3.5.1.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" integrity="sha512-iecdLmaskl7CVkqkXNQ/ZH/XLlvWZOJyj7Yy7tcenmpD1ypASozpmT/E0iPtmFIB46ZmdtAc9eNBvH0H/ZpiBw==" crossorigin="anonymous" referrerpolicy="no-referrer" />

    <link rel="stylesheet" href="~/css/admin_user.css" />
    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"></script>
   

    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.4/css/jquery.dataTables.css" />


 
</head>


<div class="wrapper">
    <!-- Sidebar -->
    <nav id="sidebar" class="collapse-sidebar">
        <div class="sidebar-header">
            <button type="button" id="sidebarCollapse" class="show-sidebar"><i class="fa fa-bars" aria-hidden="true"></i></button>
        </div>
        <ul class="list-unstyled">
            <li>
                <a asp-action="Admin_user" asp-controller="Home">
                    <i class="fa fa-user" aria-hidden="true"></i>
                    <span class='sidebar-menu-text'>User</span>
                </a>
            </li>
            <li>
                <a asp-action="CMSPage" asp-controller="Home">
                    <i class="fa-regular fa-file-lines" aria-hidden="true"></i>
                    <span class='sidebar-menu-text'>CMS Page</span>
                </a>
            </li>
            <li>
                <a asp-action="Admin_Mission" asp-controller="Home">
                    <i class="fa-solid fa-bullseye" aria-hidden="true"></i>
                    <span class='sidebar-menu-text'>Mission</span>
                </a>
            </li>
            <li>
                <a asp-action="Admin_MissionTheme" asp-controller="Home">
                    <i class="fa-solid fa-box" aria-hidden="true"></i>
                    <span class='sidebar-menu-text'>Mission Theme</span>
                </a>
            </li>
            <li>
                <a asp-action="Admin_Skills" asp-controller="Home">
                    <i class="fa-solid fa-screwdriver-wrench" aria-hidden="true"></i>
                    <span class='sidebar-menu-text'>Mission Skill</span>
                </a>
            </li>
            <li>
                <a asp-action="Admin_MissionApp" asp-controller="Home">
                    <i class="fa-solid fa-folder-closed" aria-hidden="true"></i>
                    <span class='sidebar-menu-text'>Mission Application</span>
                </a>
            </li>
            <li>
                <a asp-action="Storypage" asp-controller="Admin">
                    <i class="fa-solid fa-book-bookmark" aria-hidden="true"></i>
                    <span class='sidebar-menu-text'>Story</span>
                </a>
            </li>
            <li>
                <a asp-action="BannerManagementpage" asp-controller="Admin">
                    <i class="fa-solid fa-spinner" aria-hidden="true"></i>
                    <span class='sidebar-menu-text'>Banner Management</span>
                </a>
            </li>
        </ul>
    </nav>
    <!-- Page Content -->
    <div id="layout-admin">
        <div class="header">
            <div class="d-flex justify-content-between">
                <div class="DateAndTime">
                    @{
                        string formattedDate = DateTime.Now.ToString("dddd, MMMM d, yyyy, h:mm tt");
                    }
                    <span id="current-time">@formattedDate</span>
                </div>
                <div class="user">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">

                                @*<img class="userimg" src="~/images/BlankProfile3.png">*@




                                <span style="margin-left:0.5rem;">User Name</span>


                            </a>
                            <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                <li><a class="dropdown-item" href="#">Action</a></li>
                                <li><a class="dropdown-item" href="#">Another action</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item" asp-action="Index" asp-controller="Home">Logout</a></li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
        <div id="content-admin" class="content-admin">
            <h1>User</h1>
            <hr />
            <div class="firstrow">
                <div class="col-7">
                    @*<input placeholder="Search" type="search" class="searchbar" />*@

                </div>
                <div class="col-6">

                    <!-- Button trigger modal -->
                    <button type="button" class="btn add-hours" data-bs-toggle="modal" data-bs-target="#exampleModal">
                        <img src="~/NewFolder/plus.png" class="plus-img" />
                        Add
                    </button>


                    <!-- Modal -->
                    <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                        <div class="modal-dialog modal-dialog-centered modal-lg">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="exampleModalLabel">Please input below User Details</h5>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                </div>
                                <form id="myform" asp-action="Admin_user" asp-controller="Home" method="post">
                                    <div class="modal-body">



                                        <div>

                                            <label asp-for="FirstName" class="form-label">First name</label>
                                            <input asp-for="FirstName" id="FirstName" type="text" placeholder="Enter user's First Name" class="form-control">
                                            <span asp-validation-for="FirstName" class="text-danger" style="font-size:12px;"></span>






                                        </div>
                                        <br />
                                        <div>
                                            <label asp-for="LastName" class="form-label">Last name</label>
                                            <input asp-for="LastName" id="LastName" type="text" placeholder="Enter user's Last Name" class="form-control">
                                            <span asp-validation-for="LastName" class="text-danger" style="font-size:12px;"></span>
                                        </div>
                                        <br />

                                        <div>
                                            <label asp-for="Email" class="form-label">Email address</label>
                                            <input asp-for="Email" id="Email" type="email" class="form-control" placeholder="Enter user's Email address">
                                            <span asp-validation-for="Email" class="text-danger" style="font-size:12px;"></span>
                                        </div>

                                        <br />

                                        <div>
                                            <label asp-for="Password" class="form-label">Password</label>
                                            <input asp-for="Password" id="Password" type="password" class="form-control" placeholder="Enter your Password">
                                            <span asp-validation-for="Password" class="text-danger" style="font-size:12px;margin-top:-2%;"></span>


                                        </div>

                                        <br />

                                        <label class="form-label" for="customFile">Upload user avatar</label>
                                        <input type="file" class="form-control" id="customFile" />

                                        <br />

                                        <div>
                                            <label asp-for="CityId" for="CityId" class="form-label">City ID</label>
                                            <input asp-for="CityId" id="CityId" type="number" class="form-control" placeholder="Enter user's City Id" value="">
                                            <span asp-validation-for="CityId" class="text-danger" style="font-size:12px;margin-top:-2%;"></span>

                                        </div>

                                        <br />

                                        <div>
                                            <label asp-for="CountryId" for="CountryId" class="form-label">Country ID</label>
                                            <input asp-for="CountryId" id="CountryId" type="number" class="form-control" placeholder="Enter user's Country Id" value="">
                                            <span asp-validation-for="CountryId" class="text-danger" style="font-size:12px;margin-top:-2%;"></span>

                                        </div>
                                        <br />

                                        <div>
                                            <label for="empid" class="form-label">Employee ID</label>
                                            <input id="empid" type="number" class="form-control" placeholder="Enter user's Employee Id" value="">
                                        </div>
                                        <br />
                                        <div>
                                            <label for="" class="form-label">Department</label>
                                            <input id="dept" type="text" class="form-control" placeholder="Enter user's Department" value="">
                                        </div>

                                        <br />
                                        <div>
                                            <label for="profiletxt" class="form-label">Profile Text</label>
                                            <input id="profiletxt" type="text" class="form-control" placeholder="Enter user's Profile Text" value="">
                                        </div>

                                        <br />


                                        <div>
                                            <label asp-for="Status" for="Status" class="form-label">Status</label>
                                            <input asp-for="Status" id="Status" type="text" class="form-control" placeholder="Enter user's status" value="">
                                            <span asp-validation-for="Status" class="text-danger" style="font-size:12px;margin-top:-2%;"></span>

                                        </div>

                                    </div>
                                </form>
                                <div class="modal-footer">
                                    <button type="button" class="btn cancel-btn" data-bs-dismiss="modal">Cancel</button>
                                    <button type="submit" class="btn save-btn" onclick="saveAdminUserData()">Save</button>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>

            </div>

            <br />

            <table style="background-color:white; width:100%;" id="table_id" class="display" data-order='[[ 1, "asc" ]]' data-page-length='25' d>
                <thead>
                    <tr>
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th>Email</th>
                        <th>Employee Id</th>
                        <th>Department</th>
                        <th>Status</th>
                        <th data-class-name="priority">Action</th>
                    </tr>
                </thead>
                @{
                    foreach (var user in ViewBag.users)
                    {
                        <tr>
                            <td >@user.FirstName</td>
                            <td >@user.LastName</td>
                            <td >@user.Email</td>
                            <td >@user.EmployeeId</td>
                            <td >@user.Department</td>
                            <td style="color: #14C506;">@user.Status</td>
                            <td >

                               
                                <!-- Button trigger modal -->
                            <button type="button" class="btn fas fa-edit" style="color: #f88634; margin-left:10px; font-size:larger" id="UserEditByAdmin" onclick="editAdminUser(@user.UserId)">
                                </button>



                                <i type="button" onclick="deleteuser(@user.UserId)" class="btn fa fa-trash" style="font-size:larger" aria-hidden="true"></i>



                            </td>

                        </tr>
                    }
                }



            </table>



        </div>
    </div>

</div>


<!-- Modal -->
<div class="modal fade" id="exampleModalUE" data-bs-backdrop="static" tabindex="-1" aria-labelledby="exampleModalLabelEdit" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabelEdit">User Details</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>

            <div class="modal-body">

                <input type="hidden" id="userid" />

                <div>

                    <label asp-for="FirstName" class="form-label">First name</label>
                    <input asp-for="FirstName" id="FirstNameEdit" type="text" placeholder="Enter user's First Name" class="form-control">
                    <span asp-validation-for="FirstName" class="text-danger" style="font-size:12px;"></span>

                </div>
                <br />
                <div>
                    <label asp-for="LastName" class="form-label">Last name</label>
                    <input asp-for="LastName" id="LastNameEdit" type="text" placeholder="Enter user's Last Name" class="form-control">
                    <span asp-validation-for="LastName" class="text-danger" style="font-size:12px;"></span>
                </div>
                <br />

                <div>
                    <label asp-for="Email" class="form-label">Email address</label>
                    <input asp-for="Email" id="EmailEdit" type="email" class="form-control" placeholder="Enter user's Email address">
                    <span asp-validation-for="Email" class="text-danger" style="font-size:12px;"></span>
                </div>

                <br />

                <div>
                    <label asp-for="Password" class="form-label">Password</label>
                    <input asp-for="Password" id="PasswordEdit" type="password" class="form-control" placeholder="Enter your Password">
                    <span asp-validation-for="Password" class="text-danger" style="font-size:12px;margin-top:-2%;"></span>


                </div>

                <br />

                <label class="form-label" for="customFile">Upload user avatar</label>
                <input type="file" class="form-control" id="customFileEdit" />

                <br />

                <div>
                    <label asp-for="CityId" for="CityId" class="form-label">City ID</label>
                    <input asp-for="CityId" id="CityIdEdit" type="number" class="form-control" placeholder="Enter user's City Id" value="">
                    <span asp-validation-for="CityId" class="text-danger" style="font-size:12px;margin-top:-2%;"></span>

                </div>

                <br />

                <div>
                    <label asp-for="CountryId" for="CountryId" class="form-label">Country ID</label>
                    <input asp-for="CountryId" id="CountryIdEdit" type="number" class="form-control" placeholder="Enter user's Country Id" value="">
                    <span asp-validation-for="CountryId" class="text-danger" style="font-size:12px;margin-top:-2%;"></span>

                </div>
                <br />

                <div>
                    <label asp-for="empidEdit" class="form-label">Employee ID</label>
                    <input asp-for="empidEdit" id="empidEdit" type="number" class="form-control" placeholder="Enter user's Employee Id" value="">
                    <span asp-validation-for="empidEdit" class="text-danger" style="font-size:12px;margin-top:-2%;"></span>

                </div>
                <br />
                <div>
                    <label for="" class="form-label">Department</label>
                    <input id="deptEdit" type="text" class="form-control" placeholder="Enter user's Department" value="">
                </div>

                <br />
                <div>
                    <label for="profiletxt" class="form-label">Profile Text</label>
                    <input id="profiletxtEdit" type="text" class="form-control" placeholder="Enter user's Profile Text" value="">
                </div>

                <br />


                <div>
                    <label asp-for="Status" for="Status" class="form-label">Status</label>
                    <input asp-for="Status" id="StatusEdit" type="text" class="form-control" placeholder="Enter user's status" value="">
                    <span asp-validation-for="Status" class="text-danger" style="font-size:12px;margin-top:-2%;"></span>

                </div>

            </div>

            <div class="modal-footer">
                <button type="button" class="btn cancel-btn" data-bs-dismiss="modal">Cancel</button>
                <button type="submit" class="btn save-btn" onclick="saveEditedData()">Save</button>
            </div>
        </div>
    </div>
</div>

<script src="https://cdn.datatables.net/1.13.4/js/jquery.dataTables.js"></script>
<script src="~/js/admin_user.js"></script>
