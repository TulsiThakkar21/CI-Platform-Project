            }

            if (TempData["EditedData"] != null)
            {
                <script src="~/lib/jquery/dist/jquery.min.js"></script>
                <script src="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
                <script type="text/javascript">
                    toastr.success('@TempData["EditedData"]');
                </script>
            }


        }
        <div class="header">
            <div class="d-flex justify-content-between">
                <div class="DateAndTime">
                    @{
                        string formattedDate = DateTime.Now.ToString("dddd, MMMM d, yyyy, h:mm tt");
                    }
                    <span id="current-time">@formattedDate</span>
                </div>
                <div class="user">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item dropdown">
                            
                            <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                <li><a class="dropdown-item" href="#">Action</a></li>
                                <li><a class="dropdown-item" href="#">Another action</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item" asp-action="Index" asp-controller="Home">Logout</a></li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
        <div id="content-admin" class="content-admin">
            <h1>Banner</h1>
            <br />

            <hr />
            <div class="firstrow">
                <div class="col-7">
                </div>
                <div class="col-6">

                    <!-- Button trigger modal -->
                    <button type="button" class="btn add-hours" data-bs-toggle="modal" data-bs-target="#exampleModal">
                        <img src="~/NewFolder/plus.png" class="plus-img" />
                        Add
                    </button>


                    <!-- Modal -->
                    <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                        <div class="modal-dialog modal-dialog-centered modal-lg">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="exampleModalLabel">Please input below CMS Details</h5>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                </div>
                                <form id="banner-form" asp-action="Admin_AddBanner" asp-controller="Home" method="post" enctype="multipart/form-data">
                                    <div class="modal-body">





                                        <div>

                                            <label  class="form-label" for="customFile">Upload Image</label>
                                            @*<input asp-for="File" name="File" type="file" class="form-control" id="customFile" />*@
                                             <input type="file" name="formFile" id="formFile" multiple accept="image/*" />
                                           @* <span asp-validation-for="File" class="text-danger" style="font-size:12px;"></span>*@


                                        </div>
                       
                                        <br />

                                        <div>

                                            <label asp-for="Text" class="form-label">Text</label>
                                            <input asp-for="Text" id="Text" type="text" placeholder="Enter Text" class="form-control">
                                            <span asp-validation-for="Text" class="text-danger" style="font-size:12px;"></span>


                                        </div>
                                         <br />
                                        <div>

                                            <label asp-for="SortOrder" class="form-label">Sort Order</label>
                                            <input asp-for="SortOrder" id="Text" type="number" placeholder="Enter Sort Order" class="form-control">
                                            <span asp-validation-for="SortOrder" class="text-danger" style="font-size:12px;"></span>


                                        </div>

                                    </div>

                                    <div class="modal-footer">
                                        <button type="button" class="btn cancel-btn" data-bs-dismiss="modal">Cancel</button>
                                        <button type="submit" class="btn save-btn">Save</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>

                </div>

            </div>

            <br />

            <table style="background-color:white; width:100%;" id="table_id" class="display" data-order='[[ 1, "asc" ]]' data-page-length='25' d>
                <thead>
                    <tr>

                        <th>Image</th>
                        <th style="text-align:center;">Text</th>
                        <th style="text-align:center;">SortOrder</th>

                        <th data-class-name="priority">Action</th>
                    </tr>
                </thead>
                @{
                    if (ViewBag.bannerlst != null)
                    {


                        foreach (var bnr in ViewBag.bannerlst)
                        {
                            if (@bnr.DeletedAt == null)
                            {

                                <tr>

                                    <td style="background-color:white">@bnr.ImageName</td>
                                    <td style="background-color:white; color: #14C506; text-align:center;">@bnr.Text</td>
                                    <td style="background-color:white; color: #14C506; text-align:center;">@bnr.SortOrder</td>

                                    <td style="background-color:white">


                                        <!-- Button trigger modal -->
                            <button type="button" class="btn fas fa-edit" style="color: #f88634; margin-left:10px; font-size:larger" id="BannerEditByAdmin" onclick="editBannerData(@bnr.BannerId)">
                                        </button>


                                        <i type="button" onclick="deleteBannerData(@bnr.BannerId)" class="btn fa fa-trash" style="font-size:larger" aria-hidden="true"></i>




                                    </td>

                                </tr>
                            }
                        }
                    }
                }


            </table>



        </div>
    </div>

