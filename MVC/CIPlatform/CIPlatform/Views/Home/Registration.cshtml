            @using (Html.BeginForm("Registration", "Home", FormMethod.Post))
            {
                if (ViewBag.Status != null)
                {
                    if (ViewBag.Status == 1)
                    {
                        <br />
                        <span  class="alert alert-success">Registered Successfully</span>

                       
                    }
                    else if (ViewBag.Status == 0)
                    {
                        <br />
                        @*<span  class="alert alert-danger">Email Address already exists</span>*@
                        
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
