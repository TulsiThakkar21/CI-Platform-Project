                          @*<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>*@
                        </div>
                        
                    }
                }
                <form class="mailpass3" method="post">
                    <div class="mail">


                        <div class="pass">
                            <div>

                                <label asp-for="FirstName" class="form-label">First name</label>
                                <input asp-for="FirstName" type="text" placeholder="Enter your First Name" class="form-control">
                                <span asp-validation-for="FirstName" class="text-danger" style="font-size:12px;"></span>


                            </div>
                            <div>
                                <label asp-for="LastName" class="form-label">Last name</label>
                                <input asp-for="LastName" type="text" placeholder="Enter your Last Name" class="form-control">
                                <span asp-validation-for="LastName" class="text-danger" style="font-size:12px;"></span>
                            </div>
                            <div>
                                <label asp-for="PhoneNumber" class="form-label">PhoneNumber</label>
                                <input asp-for="PhoneNumber" type="tel" class="form-control" placeholder="Enter your Phone Number">
                                <span asp-validation-for="PhoneNumber" class="text-danger" style="font-size:12px;"></span>
                            </div>
                            <div>
                                <label asp-for="Email" class="form-label">Email address</label>
                                <input asp-for="Email" type="email" class="form-control" placeholder="Enter your Email address">
                                <span asp-validation-for="Email" class="text-danger" style="font-size:12px;"></span>
                            </div>
                            <div>
                                <label asp-for="Password" class="form-label">Password</label>
                                <input asp-for="Password" id="pass" type="password" class="form-control" placeholder="Enter your Password">
                                <span asp-validation-for="Password" class="text-danger" style="font-size:12px;margin-top:-2%;"></span>


                            </div>

                            <label asp-for="ConfirmPassword" class="form-label">Confirm New Password</label>
                            <input asp-for="ConfirmPassword" id="confirmpass" type="password" class="form-control" placeholder="Enter your Confirm Password">
                            <span asp-validation-for="ConfirmPassword" class="text-danger" style="font-size:12px;margin-top:-2%;"></span>

                        </div>
                    </div>
                    <button type="submit" class="btn-reg">Register</button>
                    <br>
                    <br>

                </form>
                <div class="lost1">

                    <a asp-controller="Home" class="lost1" asp-action="LostPass" style="color:grey;"><b>Lost your password?</b></a> <br>
